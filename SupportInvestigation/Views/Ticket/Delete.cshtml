@model SupportInvestigation.Models.Model.Ticket

@{
    ViewBag.Title = "Delete";
}

<h2>Alerte Suppression!!!</h2>

<h3>Etes vous sûre de vouloir supprimer ce ticket?</h3>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Titre @Html.TextAreaFor(model => model.Title, new { @class = "field span12", @rows="1", @maxlength="45", @disabled="disabled"})</legend>
        @Html.HiddenFor(model => model.TicketID)
        <div class="editor-field">
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.DateCreation)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.DateModification)
        </div>
      
        <div class="editor-field">
             Société: 
            @Html.HiddenFor(model => model.IDMarchand)
            @Html.DisplayFor(model => model.Marchands.Url)
            @Html.ValidationMessageFor(model => model.IDMarchand)
        </div>
    
        <div class="editor-label">
           Résumé
        </div>
        @Html.TextAreaFor(model => model.Summary, new { @class = "field span12", @rows="1", @maxlength="45", @disabled="disabled"})
         @Html.ValidationMessageFor(model => model.Summary)
     
        <div class="editor-label">
            Formulaire
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Contents, new { @class = "field span12", @rows = "20", @disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.Contents)
        </div>
         <div class="pull-left">
        <strong>Crée le : </strong><em>@Model.DateCreation.ToShortDateString() </em>
    </div>   
        <div class="pull-right">
            <strong>Auteur</strong>
            @Html.HiddenFor(model => model.IDUser)
          <strong><em>@Html.DisplayFor(model => model.Users.Login)</em></strong>
            @Html.ValidationMessageFor(model => model.IDUser)
        </div>
        <br />
        <br />
        
    </fieldset>
}

@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Effacer"  class="btn btn-large btn-danger" /> |
        @Html.ActionLink("Retourner sur la liste des tickets", "List", new { }, new { @class = "btn btn-large btn-inverse" })
    </p>
}
