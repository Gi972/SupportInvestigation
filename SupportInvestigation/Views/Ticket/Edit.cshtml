@model SupportInvestigation.Models.Model.Ticket

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Ticket</legend>

        @Html.HiddenFor(model => model.TicketID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.DateCreation)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateCreation)
            @Html.ValidationMessageFor(model => model.DateCreation)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateModification)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateModification)
            @Html.ValidationMessageFor(model => model.DateModification)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Summary)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Summary)
            @Html.ValidationMessageFor(model => model.Summary)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Contents)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Contents)
            @Html.ValidationMessageFor(model => model.Contents)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IDMarchand)
        </div>

        <div class="editor-field">
            @Html.HiddenFor(model => model.IDMarchand)
            @Html.DisplayFor(model => model.Marchands.Url)
            @Html.ValidationMessageFor(model => model.IDMarchand)

        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IDUser)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.IDUser)
            @Html.DisplayFor(model => model.Users.Login)
            @Html.ValidationMessageFor(model => model.IDUser)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retourner a la liste", "List")
</div>
