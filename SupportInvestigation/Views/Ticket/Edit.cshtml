@model SupportInvestigation.Models.Model.Ticket
@{
    ViewBag.Title = "Edit";
}
@section navBar{
    <h5>
    </h5>
    <br />
    @Html.ActionLink("Edit", "Edit", new { }, new { @class = "btn btn-large btn-block btn-info disabled" })
    @Html.ActionLink("Archiver", "Solved", new { }, new { @class = "btn btn-large btn-block btn-success" })
    <br /><br /><br />
    @Html.ActionLink("Effacer", "Delete", new { }, new { @class = "btn btn-large btn-block btn-warning" })
    
    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
    <button class="btn btn-large btn-block" type="button">
        @Html.ActionLink("Retourner à la liste", "List")</button>
    <br />
    <br />
    <br />
   
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Titre @Html.EditorFor(model => model.Title)</legend>
        @Html.HiddenFor(model => model.TicketID)
        <div class="editor-field">
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.DateCreation)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.DateModification)
        </div>
        Choisir un autre marchand
        <div class="editor-field">
            @Html.HiddenFor(model => model.IDMarchand)
            @Html.DisplayFor(model => model.Marchands.Url)
            @Html.ValidationMessageFor(model => model.IDMarchand)
        </div>
        <hr />
        <div class="editor-label">
           Résumé <em>(Max : 45 caractères)</em>
        </div>
        @Html.TextAreaFor(model => model.Summary, new { @class = "field span12", @rows="1", @maxlength="45"})
         @Html.ValidationMessageFor(model => model.Summary)
     
        <div class="editor-label">
            Formulaire
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Contents, new {@class = "field span12", @rows="20"})
            @Html.ValidationMessageFor(model => model.Contents)
        </div>
         <div class="pull-left">
        <strong>Crée le : </strong><em>@Model.DateCreation.ToShortDateString() </em>
    </div>   
        <div class="pull-right">
            <strong>Auteur</strong>
            @Html.HiddenFor(model => model.IDUser)
          <strong><em>@Html.DisplayFor(model => model.Users.Login)</em></strong>
            @Html.ValidationMessageFor(model => model.IDUser)
        </div>
        <br />
        <br />
        <input type="submit" value="Sauvegarder" class="btn btn-large" />
    </fieldset>
}
