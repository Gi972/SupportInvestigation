@model SupportInvestigation.Models.Model.Marchand

@{
    ViewBag.Title = "Modifier le Marchand";
}

<h2>Modifier le Marchand</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Marchand</legend>

        @Html.HiddenFor(model => model.MarchandID)

        <div class="editor-label">
            Nom de la société
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
           Url de la société
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Url)
            @Html.ValidationMessageFor(model => model.Url)
        </div>

        <div class="editor-label">
            Nom du contact
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ContactName)
            @Html.ValidationMessageFor(model => model.ContactName)
        </div>

        <div class="editor-label">
            Numéro de téléphone
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Phone)
            @Html.ValidationMessageFor(model => model.Phone)
        </div>
        <hr />
        <div>
            <button type="submit" class="btn">Sauvegarder</button> |  @Html.ActionLink("Retourner au menu", "Index", new { }, new {@class="btn" })
        </div>
    </fieldset>
}


