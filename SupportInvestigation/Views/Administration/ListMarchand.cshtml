@model IEnumerable<SupportInvestigation.Models.Model.Marchand>

@{
    ViewBag.Title = "ListMarchand";
}

<h2>Liste des Marchands</h2>

<table class="table">
    <tr>
        <th>
            Nom de la société
        </th>
        <th>
            Url de la société
        </th>
        <th>
            Nom du contact
        </th>
        <th>
            Numéro de téléphone
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Url)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.ActionLink("Modifier", "EditMarchand", new { id=item.MarchandID })
        </td>
    </tr>
}

</table>

