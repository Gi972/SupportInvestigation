@model SupportInvestigation.Models.Model.Hypothesis

@{
    ViewBag.Title = "Edit";
}

@section navBar{
    <h5>
    </h5>
    <br />
    @Html.ActionLink("Edit", "Edit", new { }, new { @class = "btn btn-large btn-block btn-info disabled" })
    @Html.ActionLink("Archiver", "Solved", new { }, new { @class = "btn btn-large btn-block btn-success" })
    <br /><br /><br />
    @Html.ActionLink("Effacer", "Delete", new { }, new { @class = "btn btn-large btn-block btn-warning" })
    
    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
    <button class="btn btn-large btn-block" type="button">
        @Html.ActionLink("Retourner à la liste", "List","Ticket")</button>
    <br />
    <br />
    <br />
   
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Titre @Html.EditorFor(model => model.title)</legend> @Html.ValidationMessageFor(model => model.title)

        @Html.HiddenFor(model => model.hypothesisID)


        <div class="editor-field">
            @Html.HiddenFor(model => model.DateCreation)
        </div>

       
        <div class="editor-field">
            @Html.HiddenFor(model => model.DateModification)
        </div>

        
        <div class="editor-field">
            @Html.HiddenFor(model => model.StateSolved)
            @Html.ValidationMessageFor(model => model.StateSolved)
        </div>

        <div class="editor-label">
            Formulaire
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Contents, new { @class = "field span12", @rows = "20" })
            @Html.ValidationMessageFor(model => model.Contents)
        </div>

      
        <div class="editor-field">
            @Html.HiddenFor(model => model.IDTicket)
        </div>

      
       <div class="pull-left">
        <strong>Crée le : </strong><em>@Model.DateCreation.ToShortDateString() </em>
    </div>  
          <div class="pull-right">
       <strong>Auteur</strong>
            @Html.HiddenFor(model => model.IDUser)
            @Html.DisplayFor(model => model.Users.Login)
            @Html.ValidationMessageFor(model => model.IDUser)
        </div>
        <br />
        <br />
           <input type="submit" value="Save" class="btn btn-large"/>
    </fieldset>
}

